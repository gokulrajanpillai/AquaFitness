<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahul.aqua_dashboard.HomeActivity" android:background="@color/black" >






    <TextView android:id="@+id/txtClass"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingTop="30dp" android:paddingLeft="30dp"  android:text="Next class" android:textStyle="normal" android:textColor="@color/lightgray" android:textSize="30dp" />






    <!--Grid-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingTop="250dp" android:orientation="vertical" >


        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <!--1st card-->

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_margin="2dp" android:onClick="dryAction" android:clickable="true"
                >

                <LinearLayout

                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/squarebackgroundred">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:src="@drawable/ic_stretching_exercises_black"

                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dry class"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/lightgray"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!--2nd card-->

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_margin="2dp">

                <LinearLayout

                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/squarebackgroundred">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:src="@drawable/ic_swimming_figure"

                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aqua class"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/lightgray"
                        android:layout_marginTop="2dp"
                        />


                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>


        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:onClick="monthAction" android:clickable="true">

            <!--3rd card-->

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_margin="2dp">

                <LinearLayout

                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/squarebackgroundred">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:src="@drawable/ic_calendar"

                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Report"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/lightgray"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!--4th card-->

            <android.support.v7.widget.CardView
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_margin="2dp" android:onClick="overallAction" android:clickable="true">

                <LinearLayout

                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/squarebackgroundred">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:src="@drawable/ic_percentage"

                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/lightgray"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>



    </LinearLayout>





</android.support.constraint.ConstraintLayout>
